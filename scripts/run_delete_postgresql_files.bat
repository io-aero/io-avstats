@echo off

rem ------------------------------------------------------------------------------
rem
rem run_delete_postgresql_files.bat: Delete the PostgreSQL database files.
rem
rem ------------------------------------------------------------------------------

setlocal EnableDelayedExpansion

echo ================================================================================
echo Start %0
echo --------------------------------------------------------------------------------
echo IO-AVSTATS - Delete the PostgreSQL database files.
echo --------------------------------------------------------------------------------
echo POSTGRES_PGDATA          : %IO_AERO_POSTGRES_PGDATA%
echo --------------------------------------------------------------------------------
echo:| TIME
echo ================================================================================

if exist %IO_AERO_POSTGRES_PGDATA%\ (
    dir %IO_AERO_POSTGRES_PGDATA%
    rmdir /s /q %IO_AERO_POSTGRES_PGDATA%
    dir %IO_AERO_POSTGRES_PGDATA%
)

echo --------------------------------------------------------------------------------
echo:| TIME
echo --------------------------------------------------------------------------------
echo End   %0
echo ================================================================================
