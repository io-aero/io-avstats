#!/bin/zsh

set -e

# ------------------------------------------------------------------------------
#
# run_delete_postgresql_files.zsh: Delete the PostgreSQL database files.
#
# ------------------------------------------------------------------------------

print "\n================================================================================"
print "\nStart $0"
print "\n--------------------------------------------------------------------------------"
print "\nIO-AVSTATS - Delete the PostgreSQL database files."
print "\n--------------------------------------------------------------------------------"
print "\nPOSTGRES_PGDATA          : ${IO_AERO_POSTGRES_PGDATA}"
print "\n--------------------------------------------------------------------------------"

sudo ls -ll "${PWD}/${IO_AERO_POSTGRES_PGDATA}"
sudo rm -rf "${PWD}/${IO_AERO_POSTGRES_PGDATA}"

print "\n--------------------------------------------------------------------------------"
date +"DATE TIME : %d.%m.%Y %H:%M:%S"
print "\n--------------------------------------------------------------------------------"
print "\nEnd   $0"
print "\n================================================================================"
